<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>
    <link href="/css/main.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7; /* Light background for better contrast */
            margin: 0; /* Reset default margins */
            padding: 0; /* Reset default padding */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0; /* Added margin above and below */
        }

        th, td { 
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff; /* Bootstrap Primary */
            color: white;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f1f1f1; /* Light gray for hover */
        }

        img {
            border-radius: 50%; /* Round images */
            max-width: 80px; /* Set a max width */
            height: auto; /* Maintain aspect ratio */
        }

        .btn {
            display: inline-block;
            padding: 5px 10px;
            border: none;
            color: white;
            background-color: #007BFF; /* Bootstrap primary color */
            text-decoration: none;
            border-radius: 4px;
        }

        .btn:hover {
            background-color: #0056b3; /* Darker shade on hover */
        }

        footer {
            background-color: #333;
            color: white;
            padding: 20px;
            text-align: center;
            margin-top: 30px; /* Margin to ensure space above footer */
        }
    </style>
</head>
<body>
        <!-- <%- include('partials/navbar', { page: '' }) %> -->
        <%- include('partials/navbar', { page: '/lego/sets' }) %>



        <!-- Hero Section for 404 -->
        <section class="hero">
            <h1 class="text-3xl font-bold">Lego Collection</h1>
            <div class="filter-links">
                <a href="/lego/sets?theme=Technic" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Technic</a>
                <a href="/lego/sets?theme=Classic" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Classic</a>
                <a href="/lego/sets?theme=Town" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Town</a>
              
            </div>
        </section>
        
    
        <table class="table-auto w-full border">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Theme</th>
                    <th>Year</th>
                    <th>Parts</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% sets.forEach(set => { %>
                    <tr>
                        <td><img src="<%= set.img_url %>" alt="<%= set.name %>" class="avatar" /></td>
                        <td><%= set.name %></td>
                        <td>
                            <a href="/lego/sets?theme=<%= set.theme_id %>" class="btn btn-primary">
                                <%= set.theme_id %>
                            </a>
                        </td>
                        <td><%= set.year %></td>
                        <td><%= set.num_parts %></td>
                        <td>
                            <a href="/lego/sets/<%= set.set_num %>" class="btn btn-secondary">
                                Details
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        
        <!-- Footer -->
        <footer class="bg-gray-800 text-white p-4 mt-10">
            <div class="container mx-auto text-center">
                <p>&copy; 2024 Lego Collection. All rights reserved.</p>
            </div>
        </footer>
    
        <script>
            // Dropdown functionality
            const dropdown = document.querySelector('.dropdown');
            dropdown.addEventListener('click', () => {
                const dropdownContent = dropdown.querySelector('.dropdown-content');
                dropdownContent.classList.toggle('hidden');
            });
        </script>
    </body>
    </html>
    





